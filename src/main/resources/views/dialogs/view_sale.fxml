<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="600.0" prefWidth="600.0" stylesheets="@../../css/main.css" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.libanminds.dialogs_controllers.ViewSaleController">
   <content>
      <VBox spacing="8.0">
         <children>
            <HBox alignment="BASELINE_LEFT" spacing="8.0">
               <VBox.margin>
                  <Insets left="8.0" right="8.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="itemsTable" editable="true" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="TOP_RIGHT" spacing="16.0">
               <VBox.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" />
               </VBox.margin>
               <children>
                  <Region disable="true" opacity="0.0" prefWidth="300.0" HBox.hgrow="ALWAYS" />
                  <VBox minWidth="120.0">
                     <children>
                        <Label text="Subtotal:">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label text="Discount:">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label text="Taxes:">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label text="Total:">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label prefHeight="20.0" prefWidth="114.0" text="Amount Paid">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label prefHeight="20.0" prefWidth="114.0" text="Ramaining">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox minWidth="80.0">
                     <children>
                        <Label fx:id="subtotalText" text="0000 L.L.">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="discountText" text="0000 L.L.">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="taxesText" text="0000 L.L.">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="totalText" text="0000 L.L.">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="amountPaidText" layoutX="10.0" layoutY="90.0" text="0000 L.L.">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="remainingAmountLabel" text="0000 L.L.">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="12.0">
               <VBox.margin>
                  <Insets bottom="8.0" left="12.0" right="12.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </content>
</ScrollPane>
