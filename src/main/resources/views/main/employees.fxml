<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="600.0" prefWidth="600.0" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.libanminds.controllers.EmployeesController">
    <content>
        <VBox minHeight="600.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="8.0">
                    <children>
                        <TextField prefWidth="300.0" promptText="Search Employees">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button graphicTextGap="8.0" mnemonicParsing="false" text="Add Employee">
                            <graphic>
                                <FontIcon iconLiteral="ti-plus" />
                            </graphic>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
                    </padding></HBox>
                <TableView editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn prefWidth="75.0" text="Name" />
                        <TableColumn prefWidth="75.0" text="First Name" visible="false" />
                        <TableColumn prefWidth="75.0" text="Last Name" visible="false" />
                  <TableColumn prefWidth="75.0" text="Role" />
                        <TableColumn prefWidth="75.0" text="Email" />
                        <TableColumn prefWidth="75.0" text="Phone" />
                        <TableColumn prefWidth="75.0" text="Address" visible="false" />
                        <TableColumn editable="false" prefWidth="75.0" sortable="false" text="Actions" />
                    </columns>
                    <VBox.margin>
                        <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
                    </VBox.margin>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </content>
</ScrollPane>
