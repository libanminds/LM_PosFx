<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="600.0" prefWidth="600.0" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.libanminds.main_controllers.ExpensesController">
    <content>
        <VBox minHeight="600.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="8.0">
                    <children>
                  <Label text="Expenses" textFill="#006372">
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font>
                  </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="searchField" prefWidth="300.0" promptText="Search Expenses">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="8.0" top="8.0" />
                    </padding></HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" spacing="20.0">
               <children>
                  <Button fx:id="deleteExpenses" mnemonicParsing="false" style="-fx-background-color: ecf0f4;" text="Delete Expenses" textFill="#5580aa">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </Button>
                  <Button fx:id="editExpenses" mnemonicParsing="false" style="-fx-background-color: d8e1ea;" text="Edit Expenses" textFill="#5580aa">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </Button>
                  <Button fx:id="addExpenseButton" graphicTextGap="8.0" mnemonicParsing="false" style="-fx-background-color: #5580aa;" text="Add Expense" textFill="WHITE">
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="ti-plus" />
                     </graphic>
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </Button>
                  <Region HBox.hgrow="ALWAYS" />
                  <MenuButton mnemonicParsing="false" style="-fx-background-color: #5580aa;" text="More Options" textFill="WHITE">
                     <items>
                        <MenuItem fx:id="manageTypes" mnemonicParsing="false" text="Manage Types">
                           <graphic>
                              <FontIcon iconLiteral="ti-files" />
                           </graphic>
                        </MenuItem>
                     </items>
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </MenuButton>
               </children>
               <padding>
                  <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
               </padding>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
                <TableView fx:id="expensesTable" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
                    </VBox.margin>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </content>
</ScrollPane>
