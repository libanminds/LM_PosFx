<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="600.0" prefWidth="600.0" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.libanminds.main_controllers.ItemsController">
    <content>
        <VBox minHeight="600.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="8.0">
                    <children>
                        <TextField fx:id="searchField" prefWidth="300.0" promptText="Search Items">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                  <ComboBox prefWidth="150.0" promptText="Search Field" />
                  <ComboBox prefWidth="100.0" promptText="Category" />
                        <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="deleteItem" mnemonicParsing="false" text="Delete Item" />
                  <Button fx:id="editItem" mnemonicParsing="false" text="Edit Item" />
                        <Button fx:id="newItemBtn" graphicTextGap="8.0" mnemonicParsing="false" text="Add Item">
                            <graphic>
                                <FontIcon iconLiteral="ti-plus" />
                            </graphic>
                        </Button>
                  <MenuButton mnemonicParsing="false" text="...">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Manage Categories">
                           <graphic>
                              <FontIcon iconLiteral="ti-files" />
                           </graphic>
                        </MenuItem>
                      <MenuItem mnemonicParsing="false" text="Count Inventory">
                           <graphic>
                              <FontIcon iconLiteral="ti-agenda" />
                           </graphic>
                        </MenuItem>
                    </items>
                  </MenuButton>
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
                    </padding></HBox>
                <TableView fx:id="itemsTable" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
                    </VBox.margin>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </content>
</ScrollPane>
