<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="600.0" prefWidth="600.0" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.libanminds.main_controllers.SuppliersController">
    <content>
        <VBox minHeight="600.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="8.0">
                    <children>
                  <Label text="Suppliers" textFill="#006372">
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font>
                  </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="searchField" prefWidth="300.0" promptText="Search Suppliers">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="8.0" top="8.0" />
                    </padding></HBox>
            <HBox fx:id="buttonsHolder" alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Button fx:id="deleteSupplier" mnemonicParsing="false" style="-fx-background-color: ecf0f4;" text="Delete Supplier" textFill="#5580aa">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </Button>
                  <Button fx:id="editSupplier" mnemonicParsing="false" style="-fx-background-color: d8e1ea;" text="Edit Supplier" textFill="#5580aa">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </Button>
                  <Button fx:id="newSupplierBtn" graphicTextGap="8.0" mnemonicParsing="false" style="-fx-background-color: #5580aa;" text="Add Supplier" textFill="WHITE">
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="ti-plus" />
                     </graphic>
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </Button>
                  <Region prefHeight="17.0" prefWidth="128.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="accountStatementBtn" mnemonicParsing="false" style="-fx-background-color: #5580aa;" text="View Statement of Account" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
               </padding>
            </HBox>
                <TableView fx:id="suppliersTable" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
                    </VBox.margin>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </content>
</ScrollPane>
